FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    defaultFaces
    {
        type            zeroGradient;
    }
    body
    {
        type            zeroGradient;
    }
    floor
    {
        type            slip;
    }
    inlet
    {
	type            waveTransmissive;
        field           T;
        phi             phi;
        rho             rho;
        psi             thermo:psi;
        gamma           1.4;
        fieldInf        300;
        lInf            1.0;
        value           uniform 300;
    }
    outlet
    {
        type            zeroGradient;
    }
    wall
    {
        type            slip;
    }
}


// ************************************************************************* //
