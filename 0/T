FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    defaultFaces
    {
        type            zeroGradient;
    }
    body
    {
        type            zeroGradient;
    }
    floor
    {
        type            zeroGradient;
    }
    inlet
    {
        type            fixedValue;
        value           uniform 300;
    }
    outlet
    {
        type            inletOutlet;
	inletValue	uniform 300;
	value		uniform 300;
    }
    wall
    {
        type            zeroGradient;
    }
}


