FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      alphat;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    defaultFaces
    {
        type            fixedValue;
        value           nonuniform 0();
    }
    body
    {
        type            compressible::alphatWallFunction;
        value           uniform 0;
    }
    floor
    {
        type            slip;
//        value           uniform 0;
    }
    inlet
    {
        type            calculated;
        value           uniform 0;
    }
    outlet
    {
        type            zeroGradient;
    }
    wall
    {
        type            slip;
//        value           uniform 0;
    }
}


