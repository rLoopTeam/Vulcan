FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0.2997135;

boundaryField
{
    defaultFaces
    {
        type            fixedValue;
        value           nonuniform 0();
    }
    body
    {
        type            kqRWallFunction;
        value           uniform 1e-10;
    }
    floor
    {
        type            slip;
  //      value           uniform 0.2997135;
    }
    inlet
    {
        type            fixedValue;
        value           uniform 0.2997135;
    }
    outlet
    {
        type            zeroGradient;
    }
    wall
    {
        type            slip;
//        value           uniform 0.2997135;
    }
}


