FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 1000.0;

boundaryField
{
    defaultFaces
    {
        type            zeroGradient;
    }
    body
    {
        type            zeroGradient;
    }
    floor
    {
        type            slip;
    }
    inlet
    {
    type		totalPressure;
        p0              uniform 1073.54;
        gamma		 1.4;
        value           1073.54;
    }
    outlet
    {
        type            fixedValue;
		value			uniform 1000.;
    }
    wall
    {
        type            slip;
    }
}


