FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
	preconditioner	DIC;
        tolerance       1e-08;
        relTol          0.05;
        smoother        DIC;
        cacheAgglomeration on;
        nCellsInCoarsestLevel 20;
        agglomerator    faceAreaPair;
        mergeLevels     1;
    }
    "(k|omega)"
    {
        solver          GAMG;
        tolerance       1e-08;
        relTol          0.1;
	preconditioner	DIC;
        smoother        DILU;
        nPreSweeps      0;
        nPostSweeps     2;
        nFinestSweeps   2;
        cacheAgglomeration true;
        nCellsInCoarsestLevel 20;
        agglomerator    faceAreaPair;
        mergeLevels     1;
    }
    "(U|e)"
    {
        solver          PBiCG;
        tolerance       1e-08;
        relTol          0.1;
        preconditioner  DILU;
        smoother        DILU;
        nPreSweeps      0;
        nPostSweeps     2;
        nFinestSweeps   2;
        cacheAgglomeration true;
        nCellsInCoarsestLevel 20;
        agglomerator    faceAreaPair;
        mergeLevels     1;
    }

}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    rhoMin          rhoMin [ 1 -3 0 0 0 ] 0;
    rhoMax          rhoMax [ 1 -3 0 0 0 ] 0.005;
    consistent yes;
    residualControl
    {
        p               1e-07;
        U               1e-07;
        e               1e-07;

        // possibly check turbulence fields
        "(k|epsilon|omega)" 1e-7;
    }
}

potentialFlow
{
	nNonOrthogonalCorrectors 10;
}

relaxationFactors
{
    fields
    {
        p               1;
        rho             0.5;
    }
    equations
    {
	p		0.3;
        U               0.7;
        "(k|epsilon|omega)"   0.4;
        e               0.6;
    }
}


